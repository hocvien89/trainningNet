<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/enviroment_css.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/menu-dropdown.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/commonjs.js"></script>
    <script src="~/Scripts/CheckValidatePrd.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="header-area" class="header_area">
        <div class="header_bottom">
            <div class="container-fluid">
                <div class="row">
                    <nav role="navigation" class="navbar navbar-default mainmenu">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            <a href="~/Home/Index">
                                <img src="~/Content/Images/logo_header.png" height="50" />
                            </a>

                        </div>
                        <!-- Collection of nav links and other content for toggling -->
                        <div id="navbarCollapse" class="collapse navbar-collapse">
                            <ul id="fresponsive" class="nav navbar-nav dropdown">
                                <li><a href="#">Quản lý nhân viên</a></li>
                                <li><a href="#">Quản lý khách hàng</a></li>
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle">Quản lý mặt hàng<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Loại mặt hàng</a></li>
                                        <li><a href="#">Mặt hàng</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle">Quản lý bán hàng<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Nhập hàng</a></li>
                                        <li><a href="#">Xuất hàng</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle">Quản lý báo cáo<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="t2.html" data-toggle="dropdown" class="dropdown-toggle">Báo cáo nhân viên<span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li><a href="#">Năm làm việc</a></li>
                                                <li><a href="#">Doanh thu nhân viên</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a href="t2.html" data-toggle="dropdown" class="dropdown-toggle">Báo cáo khách hàng<span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li><a href="#">Khách hàng theo tuổi</a></li>
                                            </ul>
                                        </li>
                                        <li><a href="">Báo cáo bán hàng</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div><!-- /.header_bottom -->

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

</body>
</html>
